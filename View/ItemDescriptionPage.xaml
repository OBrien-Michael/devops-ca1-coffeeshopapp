<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShopApp.View.ItemDescriptionPage"
             xmlns:viewModel="clr-namespace:CoffeeShopApp.ViewModel"
             x:DataType="viewModel:ItemDescriptionViewModel"
             Title="{Binding Item.ItemName}">
    <VerticalStackLayout>
        <Label Margin="20,0,20,0"
               HorizontalOptions="Center"
               FontSize="24"
               Text="{Binding Item.ItemName}"/>
        <Image Source="{Binding Item.ItemImage}" 
               WidthRequest="200" HeightRequest="200" />
        <Label Margin="20,0,20,0"
               HorizontalOptions="Center"
               FontSize="24"
               Text="{Binding Item.ItemPrice}"/>
        <Label Margin="20,0,20,0"
               HorizontalOptions="Center"
               FontSize="20"
               Text="{Binding Item.ItemDescription}"/>
    </VerticalStackLayout>
</ContentPage>