<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CoffeeShopApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:CoffeeShopApp.ViewModel"
    x:DataType="viewModel:MainViewModel"

    Title="The Coffee Shop Home" >

    <Grid RowDefinitions="*,*,Auto"
          ColumnDefinitions="Auto, .73*, Auto"
          Padding="10"
          ColumnSpacing="10">

        <Image Grid.ColumnSpan="3" Source="coffeeshop_logo.png"/>

        <Label Grid.Row="1" Grid.ColumnSpan="3"
               Text="Welcome to the Coffee Shop!"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>


        <Button Grid.Row="2" Grid.Column="1"
                Text="See Menu"
                Command="{Binding SeeMenuCommand}"/>


    </Grid>

</ContentPage>
